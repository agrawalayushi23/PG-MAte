<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align:center;">Update <%= room.name  %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/rooms/<%= room._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="room[name]" value="<%= room.name %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="room[address]" value="<%= room.address %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="room[price]" value="room[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="room[image]" value="<%= room.image %>">
                </div>
				<div class="form-group">
					<input type="radio" id="pgroom" name="room[type]" value="pgroom">
					  <label for="pgroom">PG-Room</label><br>
					<input type="radio" id="pgtourism" name="room[type]" value="pgtourism">
					  <label for="pgtourism">PG-Tourism</label><br>
					<input type="radio" id="both" name="room[type]" value="both">
					  <label for="both">Both</label>
				</div>
                <div class="form-group">
                    <input type="text" class="form-control" name="room[description]" value="<%= room.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>

            </form>
            <a href="/rooms">Go Back</a>
        </div>
        
    
    </div> 

<% include ../partials/footer %>